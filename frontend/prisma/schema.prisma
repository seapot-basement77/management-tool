// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  image     String?
  messages  Message[]
  channels  Channel[] @relation("ChannelUsers")  // ← これを追加！
  createdAt DateTime @default(now())
}


model Channel {
  id        String    @id @default(cuid())
  name      String
  users     User[]    @relation("ChannelUsers") // ← references を削除
  messages  Message[]
  createdAt DateTime  @default(now())
}


model Message {
  id         String   @id @default(cuid())
  text       String
  timestamp  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  channel    Channel? @relation(fields: [channelId], references: [id])
  channelId  String?
}
